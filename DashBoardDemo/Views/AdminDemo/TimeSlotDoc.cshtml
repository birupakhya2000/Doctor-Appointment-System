@{
    ViewData["Title"] = "DoctorTimeSlot";
    Layout = "_Layout";
}

<div class="container">
    <a asp-action="AddDoc" class="btn btn-info">
        <i class="fa fa-plus" aria-hidden="true"></i><span class="ml-2">Add Doctors TimeSlot</span>
    </a>
    <h3 class="text-uppercase text-center font-weight-bold mt-4 heading">TimeSlots Of Doctors</h3>
    <table id="tblDoctorTimeSlot" class="table table-bordered table-striped table-hover">
        <thead style="border-color:gray;background-color:#C0C0C0;">
            <tr>
                <th class="text-center">SL.No</th>
                <th class="text-center">Doctor Name</th>
                <th class="text-center">From Time</th>
                <th class="text-center">To Time</th>
                <th class="text-center">SlotTime</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<style>
    th {
        text-align: center;
    }

    .table-bordered {
        border: 1px solid #ccc;
    }

        .table-bordered th,
        .table-bordered td {
            border: 1px solid #ccc;
        }

    /* Hover effect */
    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }

    /* Styling for the heading */
    .heading {
        font-size: 24px;
        color: #333;
        text-transform: uppercase;
        margin-bottom: 20px;
        text-decoration: underline;
    }

    /* Responsive styling for the button */
    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 8px 16px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: bold;
        color: #fff;
        background-color: #17a2b8;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #138496;
        }

        .btn i {
            margin-right: 8px;
        }

        .btn span {
            line-height: 1;
        }
</style>

@section Scripts{
    <script src="~/js/timeslotdoctor_datatable.js"></script>
   @* <script src="~/js/timeslotdoc.js"></script>*@
}