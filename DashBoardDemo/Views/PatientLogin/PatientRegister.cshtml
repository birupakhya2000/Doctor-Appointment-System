@{
    ViewData["Title"] = "PatientRegd";
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DashBoardDemo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DashBoardDemo.styles.css" asp-append-version="true" />
    <link href="~/css/datatablecss/jquery.datatables.css" rel="stylesheet" />
    <link href="~/css/datatablecss/jquery.datatables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="container">
        <h2 class="text-center" style="text-decoration: underline;">Register Patient</h2>

            <form id="RegistrationForm">
                <div class="form-group">
                    <label for="PatientName">Patient Name</label>
                    <input type="text" class="form-control" id="PatientName" name="Name" placeholder="Name">
                </div>

                <div class="form-group">
                    <label for="Username">UserName</label>
                    <input type="text" class="form-control" id="UserName" name="UserName" placeholder="Username">
                <div id="usernameErrorMessage" class="text-danger" style="display: none;">Username already exists</div>
                </div>

                <div class="form-group">
                    <label for="Password">Password</label>
                <input type="password" class="form-control" id="passcode" name="passcode" placeholder="Password">
                </div>

                <div class="form-group">
                    <label for="ConfirmPassword">Confirm Password</label>
                    <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm Password">
                </div>

                <div class="form-group">
                    <label for="Dob">Date of Birth</label>
                    <input type="date" class="form-control" id="Dob" name="Dob" placeholder="Date of Birth" onchange="validateDob()">
                </div>

                <div class="form-group">
                    <label for="Phone">Phone</label>
                    <input type="tel" class="form-control" id="Phone" name="Phone" placeholder="Phone">
                </div>

                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" placeholder="Email">
                <div id="emailErrorMessage" class="text-danger" style="display: none;">Email already exists</div>
                </div>
           



            <input type="radio" id="patient" name="userType" value="patient" hidden checked>

                <div class="form-group mt-3">
                    <button type="button" id="patientregd" class="btn btn-primary btn-block" style="background-color: green;">Register</button>
                </div>
            </form>



    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - DashBoardDemo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/datatable/jquery.datatables.js"></script>
    <script src="~/datatable/jquery.datatables.min.js"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/moment.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
   <script src="~/js/patientregister.js"></script>
    <link href="~/css/patientsview.css" rel="stylesheet" />
</body>
</html>


