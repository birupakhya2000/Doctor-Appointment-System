@{
    ViewData["Title"] = "PatientRegd";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DashBoardDemo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DashBoardDemo.styles.css" asp-append-version="true" />
    <link href="~/css/datatablecss/jquery.datatables.css" rel="stylesheet" />
    <link href="~/css/datatablecss/jquery.datatables.min.css" rel="stylesheet" />
    <style>
        body{
            background-image: url('@Url.Content("~/img/PatientRegistration.jpg")');
            background-size:cover;
            background-repeat:no-repeat;

            position:relative;
        }
        body::after {
            content: "";
            position: absolute;
            margin:0;
            padding:0;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
                background: #21252959;
                opacity:0.9;
            backdrop-filter: blur(6px); /* Adjust the blur radius as needed */
            z-index: 0; /* Ensure the pseudo-element is behind other content */
        }

        .container{
            position:relative;
            z-index:3 !important;
            color:white;
        }

        .wrapper{
            padding:20px;
            background: #16364252;
            border-radius: 40px;
            box-shadow: 0 0 5px black;
       
        }
        footer{
            z-index:10;
            color:black !important;
        }

    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    </head>
<body>
    <div class="container" >
      
        <h1 class="text-center p-4" style="color: #2c3e50; font-family: 'Arial', sans-serif;color:white;">
            <i class="fas fa-hospital fa-2x"></i><br>
            Doctor's Appointment Booking System
        </h1>
    </div>

    <div class="container wrapper ">
        <div class=" text-center ">
            <div class="card-body">
                <h1 class="card-title">Welcome to the Doctor Appointment System!</h1>
                <p class="card-text">Book your appointments with doctors, manage your healthcare information, and receive quality medical care.</p>
                <p class="card-text">To access the system and book appointments, please log in or create an account.</p>
            </div>
            <div class="">
                <p class="mb-0">Don't have an account?</p>
                <a href="/PatientLogin/PatientRegister" class="btn btn-primary">Register</a>
                <p class="mt-3 mb-0">Already have an account?</p>
                <a href="/Admin/AdminPage" class="btn btn-secondary">Login</a>
            </div>
        </div>
    </div>


        <footer class="border-top ">
            <div class="container" style="color:black;  ">
                &copy; 2023 - DashBoardDemo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/datatable/jquery.datatables.js"></script>
        <script src="~/datatable/jquery.datatables.min.js"></script>
        <script src="~/js/jquery.validate.min.js"></script>
        <script src="~/js/moment.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
       
        <link href="~/css/patientsview.css" rel="stylesheet" />
    </body>
</html>

